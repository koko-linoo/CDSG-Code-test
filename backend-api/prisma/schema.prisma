generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  incomplete
  complete
}

model Task {
  id        String   @id @default(uuid())
  name      String
  status    Status   @default(incomplete)
  createdAt DateTime @map("created_at")
  updatedAt DateTime @map("updated_at")

  @@map("tasks")
}
